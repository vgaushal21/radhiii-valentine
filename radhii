  <script>
    // ===== heart particles background =====
    const canvas = document.getElementById("c");
    const ctx = canvas.getContext("2d");
    let W,H, hearts=[];
    const DPR = Math.max(1, window.devicePixelRatio || 1);
    const rand=(a,b)=>a+Math.random()*(b-a);

    function resize(){
      W = canvas.width = Math.floor(innerWidth * DPR);
      H = canvas.height = Math.floor(innerHeight * DPR);
    }
    addEventListener("resize", resize); resize();

    function spawn(x){
      hearts.push({
        x: x ?? rand(0,W),
        y: H + rand(40,240),
        vx: rand(-0.15,0.15)*DPR,
        vy: rand(-1.2,-2.6)*DPR,
        s: rand(10,22)*DPR,
        r: rand(-0.8,0.8),
        vr: rand(-0.02,0.02),
        life: 1
      });
    }

    function drawHeart(x,y,s,rot,a){
      ctx.save();
      ctx.translate(x,y);
      ctx.rotate(rot);
      ctx.globalAlpha = a;
      ctx.scale(s/24, s/24);
      ctx.beginPath();
      ctx.moveTo(0, 6);
      ctx.bezierCurveTo(0, 0, -10, 0, -10, 8);
      ctx.bezierCurveTo(-10, 14, 0, 18, 0, 22);
      ctx.bezierCurveTo(0, 18, 10, 14, 10, 8);
      ctx.bezierCurveTo(10, 0, 0, 0, 0, 6);
      ctx.closePath();
      ctx.fillStyle = "rgba(255,77,109,0.95)";
      ctx.fill();
      ctx.restore();
      ctx.globalAlpha = 1;
    }

    function tick(){
      ctx.clearRect(0,0,W,H);

      // subtle stars
      ctx.globalAlpha = 0.08;
      for(let i=0;i<70;i++){
        const x = (i*97 % 1000)/1000 * W;
        const y = (i*53 % 1000)/1000 * H;
        const r = (i%5+1)*DPR*0.45;
        ctx.beginPath(); ctx.arc(x,y,r,0,Math.PI*2);
        ctx.fillStyle = "#fff"; ctx.fill();
      }
      ctx.globalAlpha = 1;

      for(let i=hearts.length-1;i>=0;i--){
        const h=hearts[i];
        h.x += h.vx; h.y += h.vy; h.r += h.vr; h.life -= 0.0035;
        drawHeart(h.x,h.y,h.s,h.r, Math.max(0,h.life));
        if(h.y < -200 || h.life<=0) hearts.splice(i,1);
      }

      if(hearts.length < 120 && Math.random()<0.55) spawn();
      requestAnimationFrame(tick);
    }
    tick();
    setTimeout(()=>{ for(let i=0;i<18;i++) spawn(); }, 900);

    // ===== pages =====
    const pages = ["p1","p2","p3"].map(id=>document.getElementById(id));
    const dots = [document.getElementById("d1"),document.getElementById("d2"),document.getElementById("d3")];

    function show(i){
      pages.forEach((p,k)=>p.classList.toggle("active", k===i));
      dots.forEach((d,k)=>d.classList.toggle("active", k===i));
      for(let n=0;n<26;n++) spawn((innerWidth/2 + rand(-150,150))*DPR);
      if(navigator.vibrate) navigator.vibrate(25);
      if(i===1) startTyping(); // start shayari typing on page 2
    }

    document.getElementById("next1").onclick=()=>show(1);
    document.getElementById("back2").onclick=()=>show(0);
    document.getElementById("next2").onclick=()=>show(2);

    // ===== Shayari typing =====
    const shayariText =
`‡§§‡•Å‡§Æ ‡§Æ‡•á‡§∞‡•Ä ‡§∏‡•Å‡§¨‡§π ‡§ï‡•Ä ‡§™‡§π‡§≤‡•Ä ‡§ï‡§ø‡§∞‡§£ ‡§ú‡•à‡§∏‡•Ä ‡§π‡•ã,
‡§Æ‡•á‡§∞‡•Ä ‡§∞‡§æ‡§§‡•ã‡§Ç ‡§ï‡•Ä ‡§ö‡§æ‡§Å‡§¶‡§®‡•Ä ‡§ú‡•à‡§∏‡•Ä ‡§π‡•ã‡•§
‡§§‡•Å‡§Æ‡§∏‡•á ‡§π‡•Ä ‡§Æ‡•á‡§∞‡•Ä ‡§¶‡•Å‡§®‡§ø‡§Ø‡§æ ‡§™‡•Ç‡§∞‡•Ä ‡§≤‡§ó‡§§‡•Ä ‡§π‡•à,
‡§§‡•Å‡§Æ ‡§Æ‡•á‡§∞‡•Ä ‡§ú‡§º‡§ø‡§Ç‡§¶‡§ó‡•Ä ‡§ï‡•Ä ‡§∏‡§¨‡§∏‡•á ‡§ñ‡•Ç‡§¨‡§∏‡•Ç‡§∞‡§§ ‡§ï‡§Æ‡•Ä ‡§™‡•Ç‡§∞‡•Ä ‡§ï‡§∞‡§®‡•á ‡§µ‡§æ‡§≤‡•Ä ‡§π‡•ã`;

    let typed=false;
    function startTyping(){
      if(typed) return;
      typed=true;
      const el = document.getElementById("shayari");
      let i=0;
      const speed = 24; // ms per char
      const timer = setInterval(()=>{
        el.textContent = shayariText.slice(0, i++);
        if(i > shayariText.length){
          clearInterval(timer);
          el.classList.remove("typing");
        }
      }, speed);
    }

    // ===== yes/no =====
    const final = document.getElementById("finalMsg");
    document.getElementById("yesBtn").onclick=()=>{
      final.textContent = "Yay! üíû Gaushal is the happiest person right now üòç";
      for(let n=0;n<95;n++) spawn((innerWidth/2 + rand(-240,240))*DPR);
    };

    // playful: "No" button runs away
    const noBtn = document.getElementById("noBtn");
    noBtn.onmouseenter = () => moveNo();
    noBtn.onclick = () => moveNo();

    function moveNo(){
      final.textContent = "Hehe‚Ä¶ this button is not allowed üòÑ";
      const x = rand(-60, 60);
      const y = rand(-10, 30);
      noBtn.style.position = "relative";
      noBtn.style.left = x + "px";
      noBtn.style.top  = y + "px";
      for(let n=0;n<16;n++) spawn((innerWidth/2 + rand(-120,120))*DPR);
    }
  </script>
